baseURL: "https://computer-vision-talks.com/" # if your site is in 'https', then make sure your base url isn't written using 'http' otherwise your sitemap would contain http (as opposeed to https) URLs. This would affect Google indexing of your URLs.
title: "Computer Vision Talks"
theme: loveit

# Enable comments by entering your Disqus shortname
disqusShortname: "cvtalks"

#Menus:
#  main:
#    - Name: "Github"
#      URL: "https://github.com/username/"
#    - Name: "LinkedIn"
#      URL: "https://www.linkedin.com/in/username/"

enableInlineShortcodes: true
buildDrafts: false
buildFuture: false
buildExpired: false
pygmentsUseClasses: true
googleAnalytics: UA-10687369-5

enableEmoji: true
enableRobotsTXT: true
languageCode: en
# whether to include Chinese/Japanese/Korean
hasCJKLanguage: false

# default amount of posts in each pages
paginate: 12

minify:
  disableXML: true
  # minifyOutput: true

markup:
    goldmark:
        renderer:
          unsafe: true


author:
  name: Eugene Khvedchenya
  email: ekhvedchenya@computer-vision-talks.com

menus:
  main:
    - name: "Home"
      identifier: "home"
      weight: 100
      url: "/"

    - name: "Posts"
      weight: 150
      identifier: "posts"
      url: "/posts/"

    - name: "Open-Source"
      weight: 200
      identifier: "open-source"
      url: "/open-source"

    - name: "Competitions"
      weight: 250
      identifier: "competitions"
      url: "/competitions"

    - name: "Research"
      weight: 300
      identifier: "publications"
      url: "/publications"

    - name: "About Me"
      weight: 350
      identifier: "about"
      url: "/about"


params:
  title: "Computer Vision Talks"
  description: A personal blog about Computer Vision, AI,<br /> Kaggle, Open-Source and research. <br />You will never read this in books.
  profilePicture: images/4ECfkGJr_400x400.jpg
  relatedPosts: true
  numberOfRelatedPosts: 10
  toc: true
  # tags: true
  doNotLoadAnimations: true

  app:
    title: "Computer Vision Talks"
    noFavicon: false
    # modern SVG favicon to use in place of older style .png and .ico files
    svgFavicon: ""
    # Android browser theme color
    themeColor: "#ffffff"
    # Safari mask icon color
    iconColor: "#5bbad5"
    # Windows v8-10 tile color
    tileColor: "#da532c"

  # defaultTheme: light
  # defaultTheme: dark
  defaultTheme: auto # to switch between dark or light according to browser theme



  footer:
    hugo: false
    since: 2010

  search:
    enable: true
    # type of search engine ["lunr", "algolia"]
    type: "lunr"
    # max index length of the chunked content
    contentLength: 4000
    # placeholder of the search bar
    placeholder: ""
    # LoveIt NEW | 0.2.1 max number of results length
    maxResultLength: 10
    # LoveIt NEW | 0.2.3 snippet length of the result
    snippetLength: 30
    # LoveIt NEW | 0.2.1 HTML tag name of the highlight part in results
    highlightTag: "em"
    # LoveIt NEW | 0.2.4 whether to use the absolute URL based on the baseURL in search index
    absoluteURL: false

  page:
    toc: true
    share:
      enable: true
      Twitter: true
      Linkedin: false
      Reddit: false

    code:
      copy: true
      maxShownLines: 50

  # header social icons
  twitter: cvtalks     # twitter.com/YOUR_TWITTER_ID
  github: BloodAxe       # github.com/YOUR_GITHUB_ID
  rss: true                      # show rss icon with link

  socialIcons:
    - icon: fab fa-linkedin
      title: Linkedin
      url: "https://www.linkedin.com/in/cvtalks/"

    - icon: fab fa-twitter
      title: Twitter
      url: "https://twitter.com/cvtalks"

    - icon: fab fa-github
      title: GitHub
      url: "https://github.com/BloodAxe"

    - icon: fas fa-envelope
      title: E-Mail
      url: mailto:ekhvedchenya@computer-vision-talks.com